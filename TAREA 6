public static void main(String[] args) {
        System.out.println("Hola uduario. "+" Bienvenido.");
        String dia = "Lunes";
        System.out.println("Hoy es " + dia);
        int hora = 12;
        System.out.println("Son las " + hora + "en punto.");
        System.out.println("Dentro de 2 horas seran las " + hora + 2 + "en punto");
        System.out.println("Dentro de 2 horas seran las " + (hora + 2) + "en punto");
        //Todo esta bien;





    }
}
